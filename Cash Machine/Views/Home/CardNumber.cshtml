@model Cash_Machine.Models.Card
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="keyboard">
        @using (Html.BeginForm("CardNumber", "Home", FormMethod.Post, new { onsubmit = "encodeData()" }))
        {
            <form class="keyboard">
                <div id="screen" class="screen">@Html.TextBoxFor(model => model.Number)</div>
                @for (var i = 1; i <= 9; i++)
                {
                    <input class="key" type="button" value="@i" onclick="onKeyboardNumberClick(value, 19)" />
                }
                <input class="key" type="button" value="Clear" onclick="onKeyboardClearClick()" />
                <input class="key" type="button" value="0" onclick="onKeyboardNumberClick(value, 19)" />
                <input id="Ok" class="key" type="submit" value="OK" />
            </form>
        }
    </div>
</div>
