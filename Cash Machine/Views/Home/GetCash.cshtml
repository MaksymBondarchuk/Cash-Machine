@{
    ViewBag.Title = "Get cash";
}

<div class="row">
    <div class="keyboard">
        @using (Html.BeginForm("GetCash", "Home", FormMethod.Post, new { onsubmit = "encodeData()" }))
        {
            <form class="keyboard">
                <div id="screen" class="screen">@Html.TextBox("requestedAmount")</div>
                @for (var i = 1; i <= 9; i++)
                {
                    <input class="key" type="button" value="@i" onclick="onKeyboardNumberClick(value, -1)" />
                }
                <input class="key" type="button" value="Clear" onclick="onKeyboardClearClick()" />
                <input class="key" type="button" value="0" onclick="onKeyboardNumberClick(value, -1)" />
                <input id="Ok" class="key" type="submit" value="OK" />
            </form>
        }
    </div>
</div>

<input type="button" class="btn btn-danger" value="Exit" onclick="location.href='@Url.Action("CardNumber", "Home")'" />
