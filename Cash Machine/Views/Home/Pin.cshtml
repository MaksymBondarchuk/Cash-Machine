@{
    ViewBag.Title = "Pin";
}
@model Cash_Machine.Models.Card

<div class="row">
    <div class="keyboard">
        @using (Html.BeginForm("Pin", "Home", FormMethod.Post, new { onsubmit = "encodeData()" }))
        {
            <form class="keyboard">
                <div id="screen" class="screen">@Html.PasswordFor(model => model.Pin)</div>
                @for (var i = 1; i <= 9; i++)
                {
                    <input class="key" type="button" value="@i" onclick="onKeyboardNumberClick(value, 4)" />
                }
                <input class="key" type="button" value="Clear" onclick="onKeyboardClearClick()" />
                <input class="key" type="button" value="0" onclick="onKeyboardNumberClick(value, 4)" />
                <input id="Ok" class="key" type="submit" value="OK" />
            </form>
        }
    </div>
</div>
